<body style="background-color:#133A1B;">
    <div class="center">
      <a href = "/post">
          <button class="button button1">post</button>
      </a>
    </div>


    
        
    <% data.forEach((listing) => { %>
    
        <div class="tile is-one-third is-parent">
          <div class="tile is-child box">

            <p class="title"><%= listing.title %></p>
            <p class="subtitle"><%= listing.description %></p>

            <article class="tile is-child notification is-dark">
              <p class="title">Listing One</p>
              <p class="subtitle">Description</p>
            </article>

            <figure class="image is-4by3">
                <img src="https://bulma.io/images/placeholders/640x480.png">
            </figure>
            <p class="subtitle"><%= listing.location %></p>
            <p class="subtitle"><%= listing.phone_number %></p>
            <p class="subtitle"><%= listing.email %></p>
          </div>
          </div>

        
        <% }) %>
          
